{
  "name": "script-upload-records-to-db",
  "version": "1.0.0",
  "description": "Script para procesar archivos Excel y subir registros a MySQL usando TypeORM",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "watch": "nodemon --exec ts-node src/index.ts",
    "watcher": "ts-node src/index-watcher.ts",
    "watcher:prod": "node dist/index-watcher.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "excel",
    "mysql",
    "typeorm",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "typeorm": "^0.3.20",
    "mysql2": "^3.9.2",
    "xlsx": "^0.18.5",
    "winston": "^3.13.0",
    "dotenv": "^16.4.5",
    "reflect-metadata": "^0.2.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "typescript": "^5.4.3",
    "ts-node": "^10.9.2",
    "nodemon": "^3.1.0",
    "vitest": "^2.1.8",
    "@vitest/ui": "^2.1.8"
  }
}
