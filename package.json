{
  "name": "script-upload-records-to-db",
  "version": "1.0.0",
  "private": true,
  "description": "Script para procesar archivos Excel y subir registros a MySQL usando TypeORM",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "pkg": {
    "targets": [
      "node18-linux-x64"
    ],
    "outputPath": "bin",
    "assets": [
      "node_modules/xlsx/**/*",
      "node_modules/typeorm/**/*",
      "node_modules/reflect-metadata/**/*",
      "node_modules/mysql2/**/*",
      "node_modules/winston/**/*",
      "node_modules/dotenv/**/*",
      "node_modules/class-transformer/**/*",
      "node_modules/class-validator/**/*"
    ],
    "scripts": [
      "node_modules/xlsx/**/*.js",
      "node_modules/typeorm/**/*.js",
      "node_modules/mysql2/**/*.js",
      "node_modules/reflect-metadata/**/*.js"
    ],
    "ignore": [
      "node_modules/typeorm/browser/**/*",
      "node_modules/typeorm/cli/**/*",
      "node_modules/typeorm/browser",
      "**/*.test.js",
      "**/*.spec.js",
      "**/*.d.ts",
      "**/test/**/*",
      "**/tests/**/*",
      "**/__tests__/**/*",
      "**/coverage/**/*",
      "**/.nyc_output/**/*"
    ]
  },
  "scripts": {
    "build": "tsc",
    "build:executable": "npm run build && pkg .",
    "build:executable:clean": "npm run build && pkg . > /dev/null 2>&1 && echo '✅ Ejecutable creado exitosamente'",
    "build:all": "npm run build && pkg . && chmod +x bin/script-upload-records-to-db",
    "build:all:clean": "npm run build && pkg . > /dev/null 2>&1 && chmod +x bin/script-upload-records-to-db && echo '✅ Ejecutable creado y configurado exitosamente'",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "db:start": "docker compose up -d mysql",
    "db:stop": "docker compose stop mysql",
    "db:reset": "docker compose down -v && docker compose up -d mysql",
    "db:restart": "docker compose restart mysql",
    "db:logs": "docker compose logs mysql",
    "db:clean": "docker compose down -v && docker volume rm script-upload-records-to-db_mysql_data",
    "db:status": "docker compose ps mysql",
    "logs:analyze": "ts-node scripts/log-analyzer.ts",
    "logs:clean": "find ./logs -name '*.log' -mtime +30 -delete",
    "logs:report": "npm run logs:analyze && echo 'Reporte generado en ./logs/report.md'",
    "logs:test": "npm run build && node scripts/test-improved-logging.js",
    "test:excel": "node scripts/create-test-excel.js",
    "test:excel:large": "node scripts/create-large-test-excel.js",
    "demo": "node scripts/demo-progress.js",
    "test:retry": "npm run build && node scripts/test-database-retry.js",
    "test:env-config": "npm run build && node scripts/test-env-config.js",
    "release": "./scripts/create-release.sh",
    "release:patch": "./scripts/create-release.sh $(npm version patch --no-git-tag-version | sed 's/v//')",
    "release:minor": "./scripts/create-release.sh $(npm version minor --no-git-tag-version | sed 's/v//')",
    "release:major": "./scripts/create-release.sh $(npm version major --no-git-tag-version | sed 's/v//')"
  },
  "keywords": [
    "excel",
    "mysql",
    "typeorm",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.5",
    "mysql2": "^3.9.2",
    "reflect-metadata": "^0.2.1",
    "typeorm": "^0.3.20",
    "winston": "^3.13.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@vitest/ui": "^2.1.8",
    "pkg": "^5.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3",
    "vitest": "^2.1.8"
  }
}
